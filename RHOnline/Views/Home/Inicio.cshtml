
@{
    ViewData["Title"] = "Inicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["MensagemErroInicio"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["MensagemErroInicio"]
    </div>
}

@if (TempData["MensagemSucessoInicio"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["MensagemSucessoInicio"]
    </div>
}

@if (TempData["VerificarEmail"] != null)
{
    <div class="alert alert-dismissable alert-warning" role="alert">

        @TempData["VerificarEmail"], <a href="/RHOnline/Home/EnviarLinkValidacao" class="alert-link">Clique aqui</a> para reenviar o link de 
        confirmação para o seu email!

        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>

    </div>
}

<br />

<div id="carouselBanner" class="carousel slide carousel-fade" data-ride="carousel">
    <div class="carousel-inner">

        @foreach (var banner in ViewBag.Banner)
        {
            if (banner.Ordem == 1)
            {
                <div class="carousel-item active">
                    <!--Produção-->
                    @*<img src="@string.Concat("/RHOnline/images/",banner.Path)" class="d-block w-100" alt="@banner.Nome">*@
                    <!--Desenvolvimento-->
                    <img src="@string.Concat("/images/",banner.Path)" class="d-block w-100" alt="@banner.Nome">
                </div>
            }
            else
            {
                
                <div class="carousel-item">

                    <!--Produção-->
                    @*<img src="@string.Concat("/RHOnline/images/",banner.Path)" class="d-block w-100" alt="@banner.Nome">*@
                    
                    <!--Desenvolvimento-->
                    <img src="@string.Concat("/images/",banner.Path)" class="d-block w-100" alt="@banner.Nome">
                </div>
            }
        }

        @*
            <div class="carousel-item active">
                <img src="~/images/banner1.svg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="~/images/banner2.svg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="~/images/banner3.svg" class="d-block w-100" alt="...">
            </div>*@
    </div>
    <a class="carousel-control-prev" href="#carouselBanner" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Anterior</span>
    </a>

    <a class="carousel-control-next" href="#carouselBanner" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Próximo</span>
    </a>
</div>

