
@{
    ViewData["Title"] = "Inicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["MensagemErroInicio"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["MensagemErroInicio"]
    </div>
}

@if (TempData["MensagemSucessoInicio"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["MensagemSucessoInicio"]
    </div>
}

<br />

<div id="carouselExampleFade" class="carousel slide carousel-fade" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/banner1.svg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="~/images/banner2.svg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="~/images/banner3.svg" class="d-block w-100" alt="...">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleFade" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Anterior</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleFade" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Próximo</span>
    </a>
</div>

<button onclick="return exibirToast();">Toast</button>


<div role="alert" id="testeToast" aria-live="assertive" aria-atomic="true" class="toast" data-autohide="false">
    <div class="toast-header">
        <img src="..." class="rounded mr-2" alt="...">
        <strong class="mr-auto">RHOnline</strong>
        <small>11 mins ago</small>
        <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="toast-body">
        Toast Teste
    </div>
</div>

