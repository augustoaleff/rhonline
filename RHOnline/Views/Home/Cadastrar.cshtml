
@{
    ViewData["Title"] = "Cadastrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["CadastroNotOK"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["CadastroNotOK"]
    </div>
}
    <br />

<h2>Cadastrar</h2>


<form action="/RHOnline/Home/Cadastrar" method="post">

    <input type="hidden" name="id" value="@ViewBag.User.Id" />

    <div class="form-row">

        <div class="form-group col-md-7">
            <label for="nome">Nome: </label>
            <input type="text" name="nome" id="nome" class="form-control" value="@ViewBag.User.Nome" disabled />
        </div>

        <div class="form-group col-md-5">
            <label for="cpf">CPF: </label>
            <input type="text" name="cpf" value="@ViewBag.User.CPF" class="form-control" disabled />
        </div>

    </div>

    <div class="form-row">


        <div class="form-group col-md-6">
            <label for="loja">Loja: </label>
            <input type="text" name="loja" value="@ViewBag.User.Loja.Nome" class="form-control" disabled />
        </div>

        <div class="form-group col-md-6">
            <label for="setor">Setor: </label>
            <input type="text" name="setor" value="@ViewBag.User.Setor.Nome" class="form-control" disabled />
        </div>

    </div>

    <div class="form-row">

        <div class="form-group col-md-8">
            <label for="email">E-mail: </label>
            <input type="email" name="email" value="@ViewBag.User.Email" class="form-control" />
        </div>

    </div>

    <div class="form-row">

        <div class="form-group col-md-4">
            <label for="telefone">Telefone: </label>
            <input type="tel" name="telefone" value="@ViewBag.User.Telefone" placeholder="(__) ____-____" class="form-control" />
        </div>

        <div class="form-group col-md-4">
            <label for="celular">Celular: </label>
            <input type="tel" name="celular" value="@ViewBag.User.Celular" placeholder="(__) _____-____" class="form-control" />
        </div>

    </div>

    <div class="form-row">

        <div class="form-group col-md-6">
            <label for="senha">Senha: </label>
            <input type="password" name="senha" class="form-control" value="@ViewBag.User.Senha" aria-describedby="requisitosSenha" required />
            <small id="requisitosSenha" class="form-text text-muted">
                A senha deve conter entre 8 e 20 caracteres, contendo letra maiúscula, minúscula e números.
            </small>

        </div>

        <div class="form-group col-md-6">
            <label for="confirmasenha">Confirme sua Senha: </label>
            <input type="password" name="confirmasenha" value="" class="form-control" required />
        </div>

        @if (TempData["SenhaNaoValidada"] != null)
        {
            <div>
                <font color="red"><b>@TempData["SenhaNaoValidada"]</b></font>
            </div>
        }

        <br />

    </div>

    <div class="form-group">

        <button type="submit" class="btn btn-primary">Enviar</button>
        <button type="reset" class="btn btn-secondary">Limpar Tela</button>

    </div>

</form>



